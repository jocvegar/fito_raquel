---
interface Props {
  href: string;
  size?: "md" | "lg";
  block?: boolean;
  style?: "outline" | "primary" | "inverted" | "muted" | "accent" | "transparent";
  class?: string;
  [x: string]: any;
}

const {
  href,
  block,
  size = "lg",
  style = "primary",
  class: className,
  ...rest
} = Astro.props;

const sizes = {
  lg: "px-5 py-2.5",
  md: "px-4 py-2",
};

const styles = {
  outline:
    "bg-[var(--color-primary-content)] border-2 border-[var(--color-primary)] text-[var(--color-primary)] hover:bg-[color-mix(in_oklab,var(--color-primary) 10%,white)] transition-colors",
  primary:
    "bg-[var(--color-primary)] text-[var(--color-primary-content)] border-2 border-transparent hover:bg-[#002c6e] transition-colors",
  inverted:
    "bg-[var(--color-primary-content)] text-[var(--color-primary)] border-2 border-transparent hover:bg-[color-mix(in_oklab,var(--color-primary) 5%,white)] transition-colors",
  muted:
    "bg-[var(--color-secondary)] text-[var(--color-primary-content)] border-2 border-transparent hover:bg-[color-mix(in_oklab,var(--color-secondary) 20%,white)] transition-colors",
  accent:
    "text-[var(--color-accent)]",
  transparent:
    "text-[var(--color-primary-content)] hover:text-[var(--color-accent)]",
};


---

<a
  href={href}
  {...rest}
  class:list={[
    "rounded-sm text-center transition focus-visible:ring-2 ring-offset-2 ring-gray-200",
    block && "w-full",
    sizes[size],
    styles[style],
    className,
  ]}
  ><slot />
</a>
