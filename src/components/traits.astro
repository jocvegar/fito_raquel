---
import { Icon } from "astro-icon/components";
import Container from "./container.astro";
import Sectionhead from "@/components/sectionhead.astro";

const principles = [
  {
    title: "Participación Ciudadana",
    description:
      "Impulso permanente a espacios de diálogo ciudadano para incorporar propuestas reales al trabajo legislativo.",
    icon: "bx:bxs-user-voice",
  },
  {
    title: "Educación como Política Pública",
    description:
      "Formación académica sólida orientada a promover iniciativas que fortalezcan el acceso y la calidad educativa en Honduras.",
    icon: "bx:bxs-graduation",
  },
  {
    title: "Gobierno Abierto",
    description:
      "Transparencia, rendición de cuentas y decisiones públicas basadas en integridad y responsabilidad institucional.",
    icon: "bx:bxs-shield",
  },
  {
    title: "Desarrollo Local",
    description:
      "Apoyo legislativo a emprendedores, pequeñas empresas y proyectos comunitarios que fortalecen la economía local.",
    icon: "bx:bxs-briefcase-alt",
  },
  {
    title: "Representación Generacional",
    description:
      "Ejercicio responsable del cargo desde una nueva generación comprometida con soluciones, consensos y visión de país.",
    icon: "bx:bxs-group",
  },
  {
    title: "Presencia Territorial",
    description:
      "Trabajo cercano y constante en comunidades, barrios y espacios ciudadanos para conocer de primera mano las realidades del país.",
    icon: "bx:bxs-map",
  },
];
---

<section id="principios" class="bg-blue-50 py-12">
  <Container>
    <Sectionhead>
      <Fragment slot="title">Principios de trabajo legislativo</Fragment>
      <Fragment slot="desc">
        Compromisos que guían el ejercicio del cargo en el Congreso Nacional.
      </Fragment>
    </Sectionhead>

    <div class="mt-16 grid gap-12 sm:grid-cols-2 md:grid-cols-3">
      {
        principles.map((item) => (
          <div class="flex items-start gap-4">
            <div class="flex h-12 w-12 flex-shrink-0 items-center justify-center rounded-full bg-accent text-white">
              <Icon class="h-6 w-6" name={item.icon} />
            </div>
            <div>
              <h3 class="text-xl font-semibold text-primary">
                {item.title}
              </h3>
              <p class="mt-2 leading-relaxed text-gray-600">
                {item.description}
              </p>
            </div>
          </div>
        ))
      }
    </div>
  </Container>
</section>
